<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Cabeçalho -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Extrator Pro"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baixe áudios do YouTube, TikTok e Insta"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="32dp"/>

        <!-- Cartão de Input -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cole o Link aqui:"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/etUrl"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@android:drawable/edit_text"
                    android:hint="https://..."
                    android:inputType="textUri"
                    android:paddingStart="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Botão de Ação -->
        <Button
            android:id="@+id/btnDownload"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="BAIXAR ÁUDIO (M4A)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#2196F3"
            app:cornerRadius="8dp" />

        <!-- Status e Progresso -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Aguardando link..."
            android:textAlignment="center"
            android:textColor="#555555"
            android:textStyle="italic"/>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

        <!-- PLAYER DE MÚSICA (Escondido até baixar) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardPlayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#E3F2FD"
            app:cardElevation="2dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Download Concluído!"
                    android:textColor="#1565C0"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvFileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="musica.m4a"
                    android:textSize="12sp"
                    android:layout_marginBottom="12dp"
                    android:singleLine="true"
                    android:ellipsize="middle"/>

                <Button
                    android:id="@+id/btnPlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="▶  TOCAR AGORA"
                    android:backgroundTint="#4CAF50"
                    app:cornerRadius="20dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>


